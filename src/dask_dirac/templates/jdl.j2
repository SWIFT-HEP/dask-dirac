JobName = "dask-dirac: dask worker";
Executable = "singularity";
Arguments = "exec --cleanenv --bind /cvmfs:/cvmfs {{ container }} dask worker tcp://{{ public_address }}:8786";
StdOutput = "std.out";
StdError = "std.err";
OutputSandbox = {"std.out","std.err"};
OwnerGroup = {{ owner }};

{% if dirac_site %}
Site = "{{ dirac_site }}";
{% endif %}
